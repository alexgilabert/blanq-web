---
// src/components/Footer.astro
import { BsInstagram } from "react-icons/bs";
import { FaTiktok, FaFacebookSquare } from "react-icons/fa";
const currentYear = new Date().getFullYear();
---
<footer class="bg-bg-white border-t border-border-light py-12">
   <div class="max-w-7xl mx-auto px-6 lg:px-8">
       <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
           <!-- Logo & Copyright -->
           <div>
               <div class="flex items-center gap-2 mb-4"> 
                   <img src="/blanq-web/IconoBlanqPNG.png" alt="Blanq Logo" class="w-8 h-8">
                   <span class="text-xl font-semibold text-text-primary">Blanq</span>
               </div>
               <p class="text-small text-text-secondary">
                   &copy; {currentYear} Blanq. All rights reserved.
               </p>
           </div>
           
           <!-- Legal -->
           <div>
               <h4 class="font-semibold text-text-primary mb-3">Legal</h4>
               <div class="space-y-2">
                   <a href="/blanq-web/politica-privacidad" class="block text-small text-text-secondary hover:text-purple-primary transition-colors">
                       Privacy Policy
                   </a>
                   <a href="/blanq-web/terminos-servicio" class="block text-small text-text-secondary hover:text-purple-primary transition-colors">
                       Terms of Service
                   </a>
               </div>
           </div>
           
           <!-- Company -->
           <div>
               <h4 class="font-semibold text-text-primary mb-3">Contact</h4>
               <div class="space-y-2">
                   <a href="mailto:info@blanqapp.com" class="block text-small text-text-secondary hover:text-purple-primary transition-colors">
                       info@blanqapp.com
                   </a>
                   <a href="mailto:jobs@blanqapp.com" class="block text-small text-text-secondary hover:text-purple-primary transition-colors">
                       Careers
                   </a>
               </div>
           </div>
       </div>
       
       <!-- Social Links -->
       <div class="pt-8 border-t border-border-light flex justify-center md:justify-end">
           <div class="flex items-center gap-6">
               <a 
                   href="https://instagram.com/blanq_app" 
                   target="_blank" 
                   rel="noopener noreferrer" 
                   aria-label="Blanq Instagram"
                   class="text-text-secondary hover:text-purple-primary transition-colors"
               >
                   <BsInstagram size={20} />
               </a>
               <a 
                   href="https://tiktok.com/@blanq_app" 
                   target="_blank" 
                   rel="noopener noreferrer" 
                   aria-label="Blanq TikTok"
                   class="text-text-secondary hover:text-purple-primary transition-colors"
               >
                   <FaTiktok size={20} />
               </a>
               <a 
                   href="https://facebook.com/blanq_app" 
                   target="_blank" 
                   rel="noopener noreferrer" 
                   aria-label="Blanq Facebook"
                   class="text-text-secondary hover:text-purple-primary transition-colors"
               >
                   <FaFacebookSquare size={22} />
               </a>
           </div>
       </div>
   </div>
</footer>