---
// src/components/Footer.astro
// Importaciones de React Icons
import { BsInstagram } from "react-icons/bs";
import { FaTiktok, FaFacebookSquare } from "react-icons/fa";

const currentYear = new Date().getFullYear();
---

<footer class="bg-card-background/80 backdrop-blur-sm py-12 text-white text-sm flex flex-col min-h-24">
   <div class="px-6 md:px-22 grid grid-cols-1 md:grid-cols-5 gap-8 items-start flex-grow">
       <div class="flex flex-col items-center md:items-start text-center md:text-left md:col-span-2">
           <div class="flex items-center space-x-2 mb-12"> 
               <img src="/IconoLaiaPNG.png" alt="Laia Logo" class="w-10 h-10 inline-block" aria-label="Logo de la aplicación Laia">
               <span class="font-dm-serif text-3xl text-laia-text text-white opacity-90">Laia</span>
           </div>
           <p class="text-xs opacity-60 mt-4">&copy; {currentYear} Laia. Todos los derechos reservados.</p>
       </div>

       <div class="flex flex-col items-center md:items-start text-center md:text-left space-y-2 md:col-span-1">
           <h4 class="font-semibold text-white mb-2 text-base">Legal</h4>
           <a href="/politica-privacidad" class="hover:text-purple-300 transition-colors opacity-80">Política de Privacidad</a>
           <a href="/terminos-servicio" class="hover:text-purple-300 transition-colors opacity-80">Términos de Servicio</a>
       </div>

       <div class="flex flex-col items-center md:items-start text-center md:text-left space-y-2 md:col-span-1">
           <h4 class="font-semibold text-white mb-2 text-base">Compañía</h4>
            <a href="mailto:info.getlaia@gmail.com" class="hover:text-purple-300 transition-colors opacity-80">Contacto</a>           <a href="/sobre-nosotros" class="hover:text-purple-300 transition-colors opacity-80">Sobre Nosotros</a>
           <a href="mailto:info.getlaia@gmail.com" class="hover:text-purple-300 transition-colors opacity-80">Trabaja con Nosotros</a>
       </div>
   </div>

   <div class="px-6 md:px-22 mt-8 md:mt-0 flex justify-center md:justify-end">
       <div class="flex items-center space-x-5">
           <a href="https://instagram.com/laia_app" target="_blank" rel="noopener noreferrer" aria-label="Instagram de Laia" class="text-white hover:text-purple-400 transition-colors">
               <BsInstagram size={24} />
           </a>
           <a href="https://tiktok.com/@laia_app" target="_blank" rel="noopener noreferrer" aria-label="TikTok de Laia" class="text-white hover:text-purple-400 transition-colors">
               <FaTiktok size={24} />
           </a>
           <a href="https://facebook.com/laia_app" target="_blank" rel="noopener noreferrer" aria-label="Facebook de Laia" class="text-white hover:text-purple-400 transition-colors">
               <FaFacebookSquare size={24} />
           </a>
       </div>
   </div>
</footer>