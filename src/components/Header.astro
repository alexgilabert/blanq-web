---
// src/components/Header.astro
---
<header class="fixed top-0 left-0 w-full z-50 bg-bg-white border-b border-border-light">
    <div class="max-w-7xl mx-auto px-4 lg:px-8 xl:px-0">
        <nav class="flex items-center justify-between h-[70px]"> 
            <a href="//" class="flex items-center gap-2 group" aria-label="Go to Blanq homepage">
                <img
                    src="//IconoBlanqPNG.png""
                    alt="Blanq Logo"
                    class="w-8 h-8"
                >
                <span class="text-xl font-semibold text-text-primary group-hover:text-purple-primary transition-colors">
                    Blanq
                </span>
            </a>
            
            <div class="flex items-center gap-8">
                <a 
                    href="mailto:info@blanqapp.com" 
                    class="text-text-secondary hover:text-text-primary transition-colors text-sm font-medium"
                >
                    Help
                </a>
                
                <button 
                    id="downloadButton" 
                    class="
                        bg-purple-primary hover:bg-purple-hover
                        text-white font-medium
                        px-6 py-2.5
                        rounded-button
                        shadow-button hover:shadow-button-hover
                        transition-all
                        text-sm
                    "
                >
                    Download
                </button>
            </div>
        </nav>
    </div>
    
    <script is:inline>
        const downloadButton = document.getElementById('downloadButton');
        if (downloadButton) {
            downloadButton.addEventListener('click', () => {
                const userAgent = navigator.userAgent || navigator.vendor || window.opera;
                const iOS_APP_STORE_URL = 'https://apps.apple.com/app/blanq'; 
                const ANDROID_PLAY_STORE_URL = 'https://play.google.com/store/apps/details?id=com.blanq.app';
                const FALLBACK_URL = 'https://blanqapp.com/download';
                
                if (/iPad|iPhone|iPod/.test(userAgent) && !window.MSStream) {
                    window.location.href = iOS_APP_STORE_URL;
                } else if (/android/i.test(userAgent)) {
                    window.location.href = ANDROID_PLAY_STORE_URL;
                } else {
                    window.location.href = FALLBACK_URL;
                }
            });
        }
    </script>
</header>