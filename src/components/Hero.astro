---
// src/components/Hero.astro
import ScrollCards from '../components/ScrollCards.jsx';
---

<section class="pt-[100px] pb-20 lg:pt-[140px] lg:pb-32 px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
            
            <!-- Text Content - A LA IZQUIERDA -->
            <div class="text-center lg:text-left">
                <h1 class="text-hero-title text-text-primary mb-4">
                    Transform your smile,<br/>day by day.
                </h1>

                <p class="text-hero-subtitle text-text-secondary mb-8 max-w-lg mx-auto lg:mx-0">
                    Your personalized AI-powered teeth whitening plan. Professional results from home.
                </p>

                <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
                    <a 
                        href="[APP_STORE_URL]" 
                        target="_blank" 
                        rel="noopener noreferrer"
                        class="inline-block transition-transform hover:scale-105"
                    >
                        <img 
                            src="/Download_on_the_App_Store.svg" 
                            alt="Download on App Store" 
                            class="h-12 sm:h-14"
                        >
                    </a>

                    <a 
                        href="[GOOGLE_PLAY_URL]" 
                        target="_blank" 
                        rel="noopener noreferrer"
                        class="inline-block transition-transform hover:scale-105"
                    >
                        <img 
                            src="/Download_on_the_Google_Play.png" 
                            alt="Get it on Google Play" 
                            class="h-12 sm:h-14"
                        >
                    </a>
                </div>
            </div>

            <!-- Phone Mockup - A LA DERECHA -->
            <div class="flex justify-center lg:justify-end">
                <img
                    src="/Component-2.png"
                    alt="Blanq app interface"
                    class="w-full max-w-md lg:max-w-lg"
                />
            </div>

        </div>
    </div>
</section>

<!-- Features Section -->
<ScrollCards client:load />